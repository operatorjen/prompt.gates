PORT=8080
BIND_URL=http://localhost:8080

TLS_CERT=/etc/ssl/fullchain.pem
TLS_KEY=/etc/ssl/privkey.pem

INDEX_HTML=./index.html
REGISTER_HTML=./register.html
CSRF_TTL=300
REDIRECT_HTTP=1

SECRET=

REDIS_URL=redis://127.0.0.1:6379/0

PATH_TTL=1800                    # seconds to keep per-user path/action state
EVENT_TTL=3600                   # seconds to keep per-user event logs
MAX_EVENTS=200                   # trim cap for per-user event list
MAX_PATH_STEPS=20                # trim cap for per-user action path
# Similarity tuning
SIMHASH_REVIEW=8
SIMHASH_BLOCK=4
MINHASH_NEAR=0.80
MIN_LEN_GATE=20
EMOJI_DENSITY_REVIEW=0.20
RULES_FILE=./rules.json
LABEL=prompt_gates